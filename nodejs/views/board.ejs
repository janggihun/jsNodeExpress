<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    

    <style>
        body {
            display: flex;
            background-color: rgb(233, 233, 233);
        }

        #main {
            background-color: white;
            width: 1000px;
            height: 1300px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 150px auto;
            position: relative;

        }

        .header {
            position: absolute;
            width: inherit;
            height: 80px;
            background-color: #90e0ef;
            top: 0px;
            display: flex;

        }

        .header span {
            display: flex;
            font-size: large;
            align-items: center;
            justify-content: center;
        }

        nav {
            background-color: #00b4d8;
            display: flex;
            position: absolute;
            height: 80px;
            right: 0;
            align-items: center;

        }

        nav a {
            color: white;
            box-sizing: border-box;
            padding: 20px;
            text-decoration: none;
            text-align: center;
        }

        nav a:hover {
            background-color: #0077b6;
            color: white;
            box-sizing: inherit;
        }

        table {
            position: absolute;
            top: 300px;
            border-collapse: collapse;
            border-spacing: 0;
        }

        section.notice {
            padding: 80px 0;
        }

        .page-title {
            margin-bottom: 60px;
        }

        .page-title h3 {
            font-size: 28px;
            color: #333333;
            font-weight: 400;
            text-align: center;
        }

        #board-search .search-window {
            padding: 15px 0;
            background-color: #f9f7f9;
        }

        #board-search .search-window .search-wrap {
            position: relative;
            /*   padding-right: 124px; */
            margin: 0 auto;
            width: 80%;
            max-width: 564px;
        }

        #board-search .search-window .search-wrap input {
            height: 40px;
            width: 100%;
            font-size: 14px;
            padding: 7px 14px;
            border: 1px solid #ccc;
        }

        #board-search .search-window .search-wrap input:focus {
            border-color: #333;
            outline: 0;
            border-width: 1px;
        }

        #board-search .search-window .search-wrap .btn {
            position: absolute;
            right: 0;
            top: 0;
            bottom: 0;
            width: 108px;
            padding: 0;
            font-size: 16px;
        }

        .board-table {
            font-size: 13px;
            width: 100%;
            border-top: 1px solid #ccc;
            border-bottom: 1px solid #ccc;
        }

        .board-table a {
            color: #333;
            display: inline-block;
            line-height: 1.4;
            word-break: break-all;
            vertical-align: middle;
        }

        .board-table a:hover {
            text-decoration: underline;
        }

        .board-table th {
            text-align: center;
        }

        .board-table .th-num {
            width: 100px;
            text-align: center;
        }

        .board-table .th-date {
            width: 200px;
        }

        .board-table th,
        .board-table td {
            padding: 14px 0;
        }

        .board-table tbody td {
            border-top: 1px solid #e7e7e7;
            text-align: center;
        }

        .board-table tbody th {
            padding-left: 28px;
            padding-right: 14px;
            border-top: 1px solid #e7e7e7;
            text-align: left;
        }

        .board-table tbody th p {
            display: none;
        }

        .container {
            width: 1100px;
            margin: 0 auto;
        }

        .search {
            position: absolute;
            top: 230px;
            border: 1px;
            border-radius: 3px;
        }

        .search [type=search] {
            position: absolute;
            border: 1px solid #00b4d8;
            border-radius: 15px;
            right: -100px;
            width: 300px;
            height: 30px;
            padding-left: 10px;
            outline: #0077b6;
        }

        button {
            width: 100px;
            height: 40px;
            font-size: 15px;
            border: 0px solid #00b4d8;
            border-radius: 25px;
            margin: 10px;
            background-color: #bde0fe;
            color: black;
            position: absolute;
            top: 215px;
            left: 600px;
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            font-family: Arial;
        }

        button:active {
            background-color: #a2d2ff;
        }

        .W {
            width: 100px;
            height: 40px;
            font-size: 15px;
            border: 0px solid #00b4d8;
            border-radius: 25px;
            margin: 10px;
            background-color: #bde0fe;
            color: black;
            position: absolute;
            top: 800px;
            left: 800px;
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            font-family: Arial;
        }

        footer {
            position: absolute;
            bottom: 0;
            background-color: gold;
            width: inherit;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: right;

        }

        li {
            list-style-type: none;
            float: left;
        }

        li a {
            display: block;
            text-decoration: none;
            margin: 20px;
        }

        #ronaldo{
            position: absolute;
            width: 100px;
            height: 100px;
            z-index: 1;
        }
    </style>

</head>

<body>
   
    <div id="main">
        <footer>
            인천 미추홀구 매소홀로488번길 6-32 태승빌딩 5층(1층 홈플러스)
        </footer>
        <div class="header">
            <span id=flag1>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;게임 데이터 아트: LOL 시각적 표현의 세계 </span>
            <nav>
                <a onclick="Allcontents()">Main</a>
                <a href="/profile">My Page</a>

                <a href="/">Logout</a>
            </nav>

        </div>
        <div>
            <button class="W">
                <a href='/contents' style="text-decoration: none; color: black;">Post</a>
            </button>
            <button type="button" id="searchTitle" onclick="search()">Search</button>
        </div>
        <div class="search">
            <input type="search" name="textInput" id="textInput" placeholder="제목을 입력하세요" value="">

        </div>
        <table style="border: 1px solid black;">
            <section class="notice">
                <!-- board list area -->
                <div id="board-list">
                    <div class="container">
                        <table class="board-table">
                            <thead>
                                <tr>
                                    <th scope="col" class="th-num">번호</th>
                                    <th scope="col" class="th-title">제목</th>
                                    <th scope="col" class="th-name">작성자</th>
                                    <th scope="col" class="th-date">등록일</th>
                                </tr>
                            </thead>


                            <tr>
                                <% data.forEach(function(item){ %>
                            <tr>

                                <td>
                                    <%= item.b_cnt %>
                                </td>
                                <td><A href="/readBoard?cnt=<%= item.b_cnt %>">
                                        <%= item.b_title %>
                                </td>
                                <td>
                                    <%= item.b_id %>
                                </td>
                                <td>
                                    <%= item.b_date %>
                                </td>


                            </tr>

                            <% })%>

                            </tr>
                            <tfoot>
                                <ul>
                                    <li>
                                        <a onclick="num(0)"> 1</a>
                                    </li>

                                    <li>
                                        <a onclick="num(1)"> 2</a>
                                    </li>
                                    <li>
                                        <a onclick="num(2)"> 3</a>
                                    </li>
                                  
                                </ul>
                            </tfoot>
                        </table>
                    </div>
                </div>

            </section>
        </table>


    </div>

    <script>
        //장기훈
        deleteOK();
        const a = document.getElementById('flag1')
        a.append(getCookie('id'), '님 환영합니다.!!');
        getCookie(getCookie('deleteCheck'));

        function num(number) {

            setCookie('num', number * 5)
            window.location.href = "board"

        }

        function deleteOK() {

            if (getCookie('delete') == 'false') {
                alert("작성자만 삭제 가능합니다.")

            } else if (getCookie('delete') == 'true') {
                alert("삭제되었습니다.")

            }
            deleteCookie('delete')
        }

        function search() { //제목검색

            let a = document.getElementById('textInput').value
            console.log(a);
            if (a) {
                setCookie('title', a)
                // console.log(a);
                window.location.href = '/searchBoard';
                return;

            }
            alert("제목을 입력해주세요")

        }

        function Allcontents() { //전체글보기 클릭시
            deleteCookie('num')
            window.location.href = "board"
        }

        function getCookie(name) { //쿠키값확인용
            var value = document.cookie.match('(^|;) ?' + name + '=([^;]*)(;|$)');
            return value ? decodeURI(value[2]) : null;
        };

        function setCookie(cookie_name, value) {
            document.cookie = cookie_name + '=' + encodeURI(value);
        }

        function deleteCookie(name) {
            document.cookie = name + '=; expires=Thu, 01 Jan 1970 00:00:01 GMT;';
        }

        $('#ronaldo').click(function abc(){
            $('#ronaldo').css('display', 'none')
        })
    </script>

</body>

</html>