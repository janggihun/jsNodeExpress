<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"
        integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8=" crossorigin="anonymous">
    </script>
    <style>
        body {
            display: flex;
            background-color: rgb(233, 233, 233);
        }

        #main {
            background-color: white;
            width: 1000px;
            height: 600px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 150px 400px;
        }

        input {
            width: 300px;
            height: 40px;
            font-size: 15px;
            border: 0;
            border-radius: 11px;
            outline: none;
            padding-left: 10px;
            background-color: rgb(233, 233, 233);
            margin: 5px;

        }

        button {
            width: 310px;
            height: 40px;
            font-size: 15px;
            /* border: none; */
            border-radius: 10px;
            padding-left: 10px;
            outline: none;
            margin: 10px;
            background-color: blue;
            color: white;
        }

        button:active {
            background-color: darkblue;
        }

        span {
            font-size: 12px;
        }

        a {
            text-decoration-line: none;
            font-weight: 900;
        }

        input[type="checkbox"] {
            display: none;
        }

        input[type="checkbox"]+label {
            color: #000000;
            font-size: 13px;
        }

        input[type="checkbox"]+label span {
            display: inline-block;
            width: 19px;
            height: 19px;
            margin: -2px 10px 0 0;
            vertical-align: middle;
            background: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/210284/check_radio_sheet.png) left top no-repeat;
            cursor: pointer;
            /* border: 0;
            border-radius: 20px; */
        }

        input[type="checkbox"]:checked+label span {
            background: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/210284/check_radio_sheet.png) -19px top no-repeat;
        }

        #btn4 {
            background-color: blue;
            color: white;
            border-radius: 10px;
        }
    </style>

</head>

<body>
    <form action="/loginCheck" method="post">
        <div id="main">

            <h1 style="color: blue; font-weight: lighter;">Login</h1>
            <div>
                <table>
                    <tr>
                        <td>
                            <input type="text" name='id' id='id' placeholder="👤아이디">
                        </td>
                    </tr>
                    <br>
                    <tr>
                        <td>
                            <input type="password" name='pwd' placeholder="&#x1F512;비밀번호"><br>
                        </td>
                    </tr>
                    <tr>
                        <td id="td3"></td>
                    </tr>
                </table>
            </div>
            <script>
                // 쿠키가 있을시에 변경 문구

                // 쿠키에 들어있는 값을 처리하여 아이디기억확인
            </script>
            <div>
                <button>Login In</button>
            </div>
            <div id="keepCheckBox">
                <input type="checkbox" id="ck" name="cc" />
                <label for="ck"><span></span>아이디 기억</label>
            </div>
            <span>Don't have an account?
                <a href="/register">Signup Now</a></span>
            <span>Did you lose your account?
                <a href="/find">Find Now</a></span>
        </div>

    </form>



</body>
<script>
    lc();
    cookiefind();

    function getCookie(name) { //쿠키값확인용
        var value = document.cookie.match('(^|;) ?' + name + '=([^;]*)(;|$)');
        return value ? unescape(value[2]) : null;
    };

    function idCookie(name) {
        var value = document.cookie.match('(^|;) ?' + name + '=([^;]*)(;|$)');
        return value ? decodeURI(value[2]) : null;

    }

    function lc() { // 로그인화면에서 불일치시 문구

        if (getCookie("login") === 'false') {
            $('#td3').html('아이디 또는 비밀번호를 확인하세요').css('color', 'red').css('font-size', 'x-small')
        }
    }

    function cookiefind() { // 아이디기억문구

        if (getCookie('cc') === 'on') { // 쿠키중에 on을 찾은경우

            let ckbox = document.querySelector('#ck');
            ckbox.setAttribute('checked', 'checked')

            let idremember = document.querySelector('#id')
            idremember.setAttribute('value', idCookie('id'))
        }

    }
</script>

</html>